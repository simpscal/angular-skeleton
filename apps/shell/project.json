{
    "name": "shell",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/shell/src",
    "prefix": "shell",
    "generators": {
        "@schematics/angular:component": {
            "style": "scss"
        }
    },
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:application",
            "options": {
                "outputPath": "dist/apps/shell",
                "index": "apps/shell/src/index.html",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/shell/tsconfig.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "input": "libs/shared/assets/src/assets",
                        "glob": "**/*",
                        "output": "assets"
                    },
                    {
                        "input": "libs/shared/assets/src/assets/images",
                        "glob": "favicon.ico",
                        "output": "."
                    }
                ],
                "styles": ["libs/shared/styles/src/styles/style.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": ["libs/shared/styles/src/styles"]
                },
                "browser": "apps/shell/src/main.ts"
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "4mb",
                            "maximumError": "5mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "2kb",
                            "maximumError": "4kb"
                        }
                    ],
                    "baseHref": "/",
                    "outputHashing": "all",
                    "fileReplacements": [
                        {
                            "replace": "apps/shell/src/environments/environment.ts",
                            "with": "apps/shell/src/environments/environment.prod.ts"
                        }
                    ]
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": false,
                    "namedChunks": true,
                    "fileReplacements": [
                        {
                            "replace": "apps/shell/src/environments/environment.ts",
                            "with": "apps/shell/src/environments/environment.dev.ts"
                        }
                    ]
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "shell:build:production"
                },
                "development": {
                    "buildTarget": "shell:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "shell:build"
            }
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "options": {
                "polyfills": ["zone.js", "zone.js/testing"],
                "tsConfig": "apps/shell/tsconfig.spec.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "input": "libs/shared/assets/src/assets",
                        "glob": "**/*",
                        "output": "assets"
                    }
                ],
                "styles": ["libs/shared/styles/src/styles/style.scss"],
                "stylePreprocessorOptions": {
                    "includePaths": ["libs/shared/styles/src/styles"]
                },
                "scripts": []
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["apps/shell/**/*.ts", "apps/shell/**/*.html"],
                "hasTypeAwareRules": true
            }
        }
    }
}

{
    "name": "admin",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "apps/admin/src",
    "tags": [],
    "implicitDependencies": ["shared", "ui", "core", "environments"],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/admin",
                "index": "apps/admin/src/index.html",
                "main": "apps/admin/src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/admin/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/admin/public"
                    }
                ],
                "styles": ["apps/admin/src/styles.scss"],
                "customWebpackConfig": {
                    "path": "apps/admin/webpack.config.ts"
                }
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all",
                    "customWebpackConfig": {
                        "path": "apps/admin/webpack.prod.config.ts"
                    },
                    "fileReplacements": [
                        {
                            "replace": "libs/environments/src/lib/environments/environment.ts",
                            "with": "libs/environments/src/lib/environments/environment.prod.ts"
                        }
                    ]
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true,
                    "fileReplacements": [
                        {
                            "replace": "libs/environments/src/lib/environments/environment.ts",
                            "with": "libs/environments/src/lib/environments/environment.dev.ts"
                        }
                    ]
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/angular:dev-server",
            "options": {
                "port": 4201,
                "publicHost": "http://localhost:4201"
            },
            "configurations": {
                "production": {
                    "buildTarget": "admin:build:production"
                },
                "development": {
                    "buildTarget": "admin:build:development"
                }
            },
            "defaultConfiguration": "development",
            "dependsOn": ["shell:serve"]
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "admin:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "defaultConfiguration": "production",
            "options": {
                "buildTarget": "admin:build",
                "port": 4201,
                "watch": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "admin:build:development"
                },
                "production": {
                    "buildTarget": "admin:build:production"
                }
            }
        }
    }
}

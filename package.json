        "@ngxs/devtools-plugin": "^19.0.0",
        "@nx/eslint-plugin": "^21.4.0",
        "@nx/js": "21.4.0",
        "@nx/module-federation": "21.4.0",
        "@nx/web": "21.4.0",
        "@nx/webpack": "21.4.0",
        "@nx/workspace": "21.4.0",
        "@schematics/angular": "^19.1.5",
        "@swc-node/register": "~1.9.1",
        "@swc/core": "~1.5.7",
        "@swc/helpers": "~0.5.11",
        "@types/jasmine": "~4.3.0",
        "@types/node": "^22.17.1",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@typescript-eslint/utils": "^8.29.0",
        "angular-eslint": "^19.2.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.0.0",
        "husky": "^9.0.11",
        "jasmine-core": "~4.5.0",
        "json-server": "^0.17.4",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.0.0",
        "lint-staged": "^15.2.2",
        "nx": "21.4.0",
        "postcss": "^8.4.39",
        "prettier": "^3.2.5",
        "serve": "^14.2.4",
        "svg-to-ts": "^12.0.0",
        "tailwindcss": "^3.4.4",
        "tslib": "^2.3.0",
        "typescript": "~5.7.3"
    },
    "svg-to-ts": {
        "srcFiles": [
            "./libs/ui/src/icons/**/*.svg"
        ],
        "outputDirectory": "./libs/ui/src/icons",
        "interfaceName": "SvgIcon",
        "typeName": "svgIcon",
        "prefix": "svg",
        "fileName": "icons.constants",
        "additionalModelFile": "./libs/ui/src/icons",
        "compileSources": true
    },
    "lint-staged": {
        "*.{ts,html}": [
            "eslint --max-warnings=0 --fix"
        ],
        "*": [
            "prettier --ignore-unknown --write"
        ]
    }
}

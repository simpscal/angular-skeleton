{
    "name": "app",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build-dev": "ng build --configuration development",
        "build-prod": "ng build --configuration production",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint",
        "prepare": "husky",
        "pre-commit": "npx lint-staged",
        "generate-icons": "svg-to-ts-constants",
        "json-server": "json-server --watch ./data/db.json --routes ./data/routes.json"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.3.11",
        "@angular/common": "^17.3.11",
        "@angular/compiler": "^17.3.11",
        "@angular/core": "^17.3.11",
        "@angular/forms": "^17.3.11",
        "@angular/platform-browser": "^17.3.11",
        "@angular/platform-browser-dynamic": "^17.3.11",
        "@angular/router": "^17.3.11",
        "@ngxs/store": "^18.0.0",
        "devextreme": "23.1",
        "devextreme-angular": "23.1",
        "i": "^0.3.7",
        "jwt-decode": "^4.0.0",
        "ngx-device-detector": "^7.0.0",
        "npm": "^10.8.2",
        "rxjs": "~7.5.0",
        "zone.js": "~0.14.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.3.8",
        "@angular-eslint/builder": "18.4.3",
        "@angular-eslint/eslint-plugin": "18.4.3",
        "@angular-eslint/eslint-plugin-template": "18.4.3",
        "@angular-eslint/schematics": "18.4.3",
        "@angular-eslint/template-parser": "18.4.3",
        "@angular/cli": "^17.3.8",
        "@angular/compiler-cli": "^17.3.11",
        "@ngxs/devtools-plugin": "^18.0.0",
        "@types/jasmine": "~4.3.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "autoprefixer": "^10.4.19",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.1.0",
        "globals": "^15.0.0",
        "husky": "^9.0.11",
        "jasmine-core": "~4.5.0",
        "json-server": "^0.17.4",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.0.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8.4.39",
        "prettier": "3.2.5",
        "svg-to-ts": "^12.0.0",
        "tailwindcss": "^3.4.4",
        "tslib": "^2.3.0",
        "typescript": "~5.4.5"
    },
    "svg-to-ts": {
        "srcFiles": [
            "./src/assets/icons/**/*.svg"
        ],
        "outputDirectory": "./src/assets/icons",
        "interfaceName": "SvgIcon",
        "typeName": "svgIcon",
        "prefix": "svg",
        "fileName": "icons.constants",
        "additionalModelFile": "./src/assets/icons",
        "compileSources": true
    },
    "lint-staged": {
        "*.{ts,html}": [
            "eslint --max-warnings=0 --fix"
        ],
        "*": [
            "prettier --ignore-unknown --write"
        ]
    }
}
